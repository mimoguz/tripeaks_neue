<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.mimoguz.tripeaks_neue</id>

    <name>TriPeaks NEUE</name>
    <summary>Patience game</summary>
    <url type="homepage">https://github.com/mimoguz/tripeaks_neue</url>
    <url type="bugtracker">https://github.com/mimoguz/tripeaks_neue/issues</url>
    <url type="donation">https://buymeacoffee.com/mimoguz</url>

    <metadata_license>MIT</metadata_license>
    <project_license>AGPL-3.0-only</project_license>

    <developer id="io.github.mimoguz">
        <name>Oguz Tas</name>
    </developer>

    <!-- Desktop AND mobile supported -->
    <recommends>
        <control>keyboard</control>
        <control>pointing</control>
        <control>touch</control>
    </recommends>

    <description>
        <p>
            A simple Tri Peaks patience (solitaire) game.
        </p>
        <p> Main Features:</p>
        <ul>
            <li>Four board layouts</li>
            <li>An option to show the values of face-down cards</li>
            <li>An option to start with an empty discard pile, allowing the player to choose any
                starting card</li>
            <li>Aggregated and per-layout statistics</li>
            <li>Portrait and landscape orientation support</li>
        </ul>
    </description>

    <categories>
        <category>Game</category>
        <category>CardGame</category>
    </categories>

    <keywords>
        <keyword>cards</keyword>
        <keyword>card-game</keyword>
        <keyword>patience</keyword>
        <keyword>solitaire</keyword>
    </keywords>

    <branding>
        <color type="primary" scheme_preference="light">#e57373</color>
        <color type="primary" scheme_preference="dark">#b84040</color>
    </branding>

    <content_rating type="oars-1.1" />

    <launchable type="desktop-id">io.github.mimoguz.tripeaks_neue.desktop</launchable>

    <screenshots>
        <screenshot type="default">
            <caption>Standard game</caption>
            <image>
                https://raw.githubusercontent.com/mimoguz/tripeaks_neue/main/linux/flatpak/images/screen.png</image>
        </screenshot>
        <screenshot>
            <caption>Layout selection dialog</caption>
            <image>
                https://raw.githubusercontent.com/mimoguz/tripeaks_neue/main/linux/flatpak/images/screen_layout_dialog.png</image>
        </screenshot>
        <screenshot>
            <caption>Statistics page</caption>
            <image>
                https://raw.githubusercontent.com/mimoguz/tripeaks_neue/main/linux/flatpak/images/screen_statistics.png</image>
        </screenshot>
        <screenshot>
            <caption>Portrait layout</caption>
            <image>
                https://raw.githubusercontent.com/mimoguz/tripeaks_neue/main/linux/flatpak/images/screen_portrait.png</image>
        </screenshot>
    </screenshots>

    <releases>
        <release version="0.8.3" date="2025-04-03">
        </release>
        <release version="0.8.4" date="2025-04-05">
            <description>
                <ul>
                    <li>Fixed an issue with undo: Wrong chain length &amp; score were being restored.</li>
                    <li>Fixed an issue with statistics: Current chain weren't included in the score
                        if a new game started without clearing the current game.</li>
                    <li>The card counter now also shows the current chain (circle indicators).</li>
                    <li>"Dependencies" card now also includes indirect dependencies.</li>
                    <li>Added a new card decoration.</li>
                </ul>
            </description>
        </release>
        <release version="0.9.0" date="2025-04-12">
            <description>
                <ul>
                    <li>Added card back colour customisation.</li>
                    <li>Tweaked the swipe indicator.</li>
                    <li>Settings page is now more compact.</li>
                </ul>
            </description>
        </release>
    </releases>
</component>